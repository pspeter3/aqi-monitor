{
  "name": "aqi-monitor",
  "private": true,
  "description": "Micro service for calculating AQI from Purple Air.",
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && npm start",
    "fmt": "prettier --write 'src/**/*'",
    "lint": "eslint 'src/**/*'",
    "spec": "jest -ci",
    "start": "node dist/main.js",
    "test": "prettier --check 'src/**/*' && npm run lint && npm run spec"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pspeter3/aqi-monitor.git"
  },
  "keywords": [
    "aqi",
    "purpleair",
    "typescript"
  ],
  "author": "Phips Peter",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pspeter3/aqi-monitor/issues"
  },
  "homepage": "https://github.com/pspeter3/aqi-monitor#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.10.0",
    "eslint-plugin-jest": "^24.0.2",
    "jest": "^26.5.0",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "eslintConfig": {
    "env": {
      "jest/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "jest": {
    "collectCoverage": true,
    "preset": "ts-jest"
  },
  "prettier": {
    "tabWidth": 4,
    "trailingComma": "all"
  }
}
