{
  "name": "aqi-monitor",
  "private": true,
  "description": "Micro service for calculating AQI from Purple Air.",
  "scripts": {
    "dev": "next dev",
    "fix": "npm run fix:lint && npm run fix:format",
    "fix:format": "prettier --write 'src/**/*' '*.{js,md}'",
    "fix:lint": "eslint --fix 'src/**/*.{ts,tsx}'",
    "build": "next build",
    "start": "next start",
    "test": "npm run test:format && npm run test:lint && npm run test:types",
    "test:format": "prettier --check 'src/**/*' '*.{js,md}'",
    "test:lint": "eslint 'src/**/*.{ts,tsx}'",
    "test:types": "tsc --pretty"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pspeter3/aqi-monitor.git"
  },
  "keywords": [
    "aqi",
    "purpleair",
    "typescript"
  ],
  "author": "Phips Peter",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pspeter3/aqi-monitor/issues"
  },
  "homepage": "https://github.com/pspeter3/aqi-monitor#readme",
  "dependencies": {
    "ajv": "^6.12.5",
    "geolib": "^3.3.1",
    "http-errors": "^1.8.0",
    "next": "^10.2.0",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "@types/node-fetch": "^2.5.7",
    "@types/react": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.10.0",
    "eslint-plugin-jest": "^24.0.2",
    "jest": "^26.5.0",
    "node-mocks-http": "^1.9.0",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "eslintConfig": {
    "env": {
      "jest/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "jest": {
    "collectCoverage": true,
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "prettier": {
    "tabWidth": 4
  }
}
